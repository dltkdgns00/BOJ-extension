{
  "name": "boj-ex",
  "displayName": "BOJ-extension",
  "description": "백준 온라인 저지를 할때 편리할법한 기능을 제공합니다.",
  "icon": "images/icon.png",
  "repository": "https://github.com/dltkdgns00/BOJ-extension",
  "author": "dltkdgns00 <dltkdgns00.dev@gmail.com>",
  "license": "MIT",
  "publisher": "dltkdgns00",
  "version": "1.1.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "keywords": [
    "solvedac",
    "BOJ",
    "acmicpc",
    "백준",
    "baekjoon"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "BOJ-EX.showProblem",
        "title": "BOJ: Show Problem"
      },
      {
        "command": "BOJ-EX.headerComment",
        "title": "BOJ: Insert Header Comment"
      },
      {
        "command": "BOJ-EX.createProblem",
        "title": "BOJ: Create Problem File"
      },
      {
        "command": "BOJ-EX.pushToGithub",
        "title": "BOJ: Push to Github"
      },
      {
        "command": "BOJ-EX.makeWorkflow",
        "title": "BOJ: Make Workflow"
      },
      {
        "command": "BOJ-EX.showManual",
        "title": "BOJ: Show Manual"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "BOJ-extension",
      "properties": {
        "BOJ.author": {
          "type": "string",
          "default": "",
          "description": "백준에서 사용하는 아이디를 적어주세요"
        },
        "BOJ.extension": {
          "type": "string",
          "default": "",
          "description": "선호하는 언어의 확장자명을 적어주세요 (ex: cpp, py, java, etc...)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@types/wcwidth": "^1.0.0",
    "axios": "^1.4.0",
    "cheerio": "^1.0.0-rc.12",
    "iconv-lite": "^0.6.3",
    "markdown-it": "^13.0.1",
    "mathjax": "^3.2.2",
    "simple-git": "^3.19.1",
    "string-width": "^6.1.0",
    "wcwidth": "^1.0.1",
    "yaml": "^2.3.1"
  }
}